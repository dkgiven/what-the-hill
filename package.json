{
  "name": "what-the-hill",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "yarn install; yarn run build-sass && yarn run build-ts && yarn run tslint",
    "build-sass": "node-sass public/stylesheets/style.scss dist/public/stylesheets/styles.css",
    "build-ts": "tsc",
    "clean": "rm -rf node_modules/",
    "full-build": "yarn run full-clean && yarn run build",
    "full-clean": "yarn cache clean && yarn run clean",
    "debug": "yarn run build && yarn run watch-debug",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "yarn run serve",
    "test": "jest --forceExit --coverage --verbose",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-sass\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-sass": "node-sass -w public/stylesheets/style.scss dist/public/stylesheets/styles.css",
    "watch-test": "yarn run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/http-errors": "^1.6.1",
    "@types/node-sass-middleware": "^0.0.30",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "errorhandler": "^1.5.0",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0",
    "node-sass-middleware": "0.11.0",
    "pug": "2.0.0-beta11"
  },
  "description": "Private (re: fun) Express.js project that interacts with US Congress data",
  "main": "index.js",
  "author": "Dennis Given",
  "license": "MIT",
  "devDependencies": {
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/morgan": "^1.7.35",
    "concurrently": "^3.5.1",
    "jest": "^23.0.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  }
}
